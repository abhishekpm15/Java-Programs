import java.util.*;
public class Linkedlist {
    public static void main(String[] args) {
        Scanner sc=new Scanner(System.in);
        LinkedList<Integer> link=new LinkedList<Integer>();
        int N;
        N=sc.nextInt();
        for(int i=0;i<N;i++){
            int b=sc.nextInt();
            link.add(b);
        }
        if(N%2!=0) {
           System.out.println(link.get(N/2));
        }
        else{
            System.out.println(link.get((N+1)/2));
        }
    }
}
